import random
import turtle
from turtle import Turtle, Screen

screen = Screen()
screen.color("black")

tim.hideturtle()
tim.speed("fastest")

def random_walk():
    turtle.title("Welcome to the Random Turtle Walk")
    directions = [0, 90, 180, 270]
    tim.pensize(10)
    for x in range(1000):
        direction = random.choice(directions)
        tim.seth(direction)
        tim.fd(15)
        tim.pencolor(random.randint(25, 255), random.randint(25, 255), random.randint(25, 255))

random_walk()
screen.exitonclick()
